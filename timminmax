#include "stdio.h"
#include "conio.h"
int main()
{
	int min, max,n,i,a[100];
	printf("cho so phan tu cua mang : ");
	scanf("%d",&n);
	for (i = 0; i<n; i++)
	{
		printf(" nhap phan tu thu %d :",i+1);
		scanf("%d",&a[i]);
	}
	min = max = a[0];
	for (i = 0; i<n; i++)
	{
		if (max < a[i]) 
		max = a[i];
	
		if (min > a[i]) min = a[i];
	
		
	}

	printf(" max cua day la : %d \n",max);
	printf(" min cua day la : %d \n", min);
	getch();
}
